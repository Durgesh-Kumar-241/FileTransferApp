<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp"/>
            <gradient android:centerColor="@color/design_default_color_background" android:startColor="@color/design_default_color_on_primary" android:useLevel="true"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <shape>
            <corners android:radius="5dp">
            </corners>

            <gradient android:endColor="#29B6F6" android:startColor="#FBFBFB"  android:useLevel="true"  android:type="linear"  android:angle="0"/>
        </shape>
    </item>
</layer-list>