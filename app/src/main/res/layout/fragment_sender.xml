<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.SenderFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="346dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Enter receiver details"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/in_rem_ip"
        app:layout_constraintEnd_toEndOf="@+id/in_rem_ip"
        app:layout_constraintStart_toStartOf="@+id/in_rem_ip"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/in_rem_ip"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="Enter receiver ip address"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button_conn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button_conn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="331dp"
        android:text="Connect"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/in_rem_ip"
        app:layout_constraintStart_toStartOf="@+id/in_rem_ip"
        app:layout_constraintTop_toBottomOf="@+id/in_rem_ip" />
</androidx.constraintlayout.widget.ConstraintLayout>